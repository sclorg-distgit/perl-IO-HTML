# Run-time:
BuildRequires:  %{?scl_prefix}perl(Carp)
BuildRequires:  %{?scl_prefix}perl(Encode) >= 2.10
BuildRequires:  %{?scl_prefix}perl(Exporter) >= 5.57
# Tests:
